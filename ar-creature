<h2>AR Creature</h2>
<p>Tik op de knop om het creature in AR te zien</p>

<button onclick="openAR()">Start AR</button>

<script>
function openAR() {
  const url =
    "intent://arvr.google.com/scene-viewer/1.0" +
    "?file=https://modelviewer.dev/shared-assets/models/Astronaut.glb" +
    "&mode=ar_only" +
    "#Intent;scheme=https;package=com.google.ar.core;action=android.intent.action.VIEW;end;";
  window.location.href = url;
}
</script>

